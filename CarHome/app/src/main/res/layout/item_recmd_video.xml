<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/item_video_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_toRightOf="@id/item_video_iv"
        android:layout_alignTop="@id/item_video_iv"
        android:layout_below="@id/item_video_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_video_title_tv"
            android:textColor="#000"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_video_time_tv"
            android:text="时间"
            android:layout_marginTop="9dp"
            android:layout_below="@id/item_video_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>